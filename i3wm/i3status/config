# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

#
# memory and swap: https://github.com/StefanoBelli/i3status
#

general {
        colors = false
        interval = 1
}

order += "memory"
order += "swap"
order += "path_exists pacman"
order += "load"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

memory {
	format = "mem %avail GB"
}

swap {
	format = "swp %avail GB"
}

path_exists pacman {
		path = "/var/lib/pacman/db.lck"
}

load {
		format = "lo: %1min"
}

cpu_usage {
		format = "cpu: %usage"
}

cpu_temperature 0 {
		format = "cput: %degrees °C"
		max_threshold = 50
		format_above_threshold = "WARNING cputemp: %degrees °C"
}

volume master {
		format = "vol: %volume"
		format_muted = "vol: mute"
		device = "default"
		mixer = "Master"
		mixer_idx = 0
}

wireless _first_ {
        format_up = "w: %ip ap %essid at%quality, %bitrate"
        format_down = "w: nc"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "e: %ip at %speed"
        format_down = "e: nc"
}

battery all {
		status_bat = "using"
		status_chr = "charge"
		status_unk = "?unk?"
		status_full = "full"
        format = "bat: %status %percentage %remaining"
}

tztime local {
        format = "d: %Y-%m-%d %H:%M:%S"
}

disk "/" {
        format = "fs: / %avail"
}

disk "/home" {
		format = "fs: /home %avail"
}
