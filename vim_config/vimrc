set shell=/bin/sh
set nocompatible
set autoindent
set tabstop=4
set softtabstop=0
set shiftwidth=4
set hlsearch
set ignorecase
set incsearch
set smartcase
set encoding=utf-8
set scrolloff=1
set wrap
set linebreak
set ruler
set noerrorbells
set novisualbell
set mouse=a
set title
set noswapfile
set nomodeline
set history=1000
set confirm
set backspace=indent,eol,start
set autoread
set autowrite
set copyindent
set preserveindent
set lazyredraw
set ffs=unix,dos,mac
set magic
set shortmess=a
set nowb
set secure
set nobackup
set showcmd
set antialias
set smartindent
set cursorline
set showmatch
set t_Co=256
set foldmethod=manual
syntax on
filetype plugin indent on

set termguicolors
set background=dark

call plug#begin()
Plug 'preservim/nerdtree'
Plug 'ayu-theme/ayu-vim'
call plug#end()

colorscheme ayu

nmap <F8> :NERDTree<CR>

nnoremap <F6> zfa}
nnoremap <F7> zo

nnoremap <TAB>h <C-w>h
nnoremap <TAB>j <C-w>j
nnoremap <TAB>k <C-w>k
nnoremap <TAB>l <C-w>l
nnoremap <TAB>w <C-w>w
nmap <F2> :split<cr>
nmap <F3> :vsplit<cr>
nmap <leader>u :hide<cr>
nmap <leader>x :only<cr>
nmap <leader>q :bdelete<cr>

nmap <leader>c :set paste<cr>
nmap <leader>d :set nopaste<cr>

nmap <F4> :tabedit<cr>
nmap <leader>y :tabonly<cr>
nmap <leader>b :tabfirst<cr>
nmap <leader>i :tablast<cr>
nmap <leader>r :tabfind 
nmap <leader>m :tabmove 

nmap <leader>n :noh<cr>

" ycm settings
" installed manually
packadd YouCompleteMe
let g:ycm_enable_semantic_highlighting=1
let g:ycm_confirm_extra_conf=0
let g:ycm_max_diagnostics_to_display=0
let g:ycm_min_num_of_chars_for_completion = 1
let g:ycm_semantic_triggers = {'c': ['->', '.', 're!.[a-zA-Z_]']}
let g:ycm_max_num_candidates = 20
let g:ycm_add_preview_to_completeopt=1
set completeopt=preview,menu,menuone
set previewheight=1
nmap <F9> :pclose<cr>
