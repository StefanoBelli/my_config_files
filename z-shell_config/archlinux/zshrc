##Small banner
START_DATE=$(date +%H:%M:%S)
banner()
{
   printf "Hi, \033[33m$(whoami)\033[0m\n"
	 printf "Hostname, \033[32m$(cat /etc/hostname)\033[0m\n"
   printf "OS: \033[31m$(uname -o -s -r)\033[0m\n"
   printf "IPv4: \033[34m$(ifconfig | grep inet | grep 192 | awk '{ print $2 }')\033[0m\n"
   printf "Shell: \033[35m$SHELL\033[0m\n"
   printf "RAM Usage: \033[31m$(free -m | grep Mem | awk '{ print $3 }')MB\033[0m\n\n"
   printf "New shell started on: \033[36m$START_DATE\033[0m\n\n"
}

